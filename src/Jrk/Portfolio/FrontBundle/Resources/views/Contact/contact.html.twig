{% extends 'JrkPortfolioFrontBundle:Layout:layout-page.html.twig' %}

{% block addscriptjs %}
    <script src="{{ asset('js/front/contact.js') }}"></script>
{% endblock %}


{% block container %}

    <div class="aside bg-white p20 mt60">
        <form class="container marketing" method="POST" action="{{ path(current_route()) }}#form">

            <div class="row">
                <div class="col-lg-12">
                    <a name="form"></a>
                    <h1 class="menu-title contact-title">
                        Contact
                    </h1>

                    <div class="mb30 bb1 grey-2">
                        <p class="pb5">
                            Une question ? Une suggestion ? Laissez-nous un message, nous tenterons d'y répondre le plus rapidement possible.
                        </p>
                    </div>

                    {% for message in app.session.flashbag.get('contact') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}

                </div>
            </div>

            <div class="row">
                <div class="col-lg-6">
                    <fieldset class="bordered form">


                        <div class="form-group {% if form_invalid(form.lastname) %}error-input{% endif %}">
                            <div class="form_std_row row">
                                {{ form_label(form.lastname,null,{label_attr:{class:'col-lg-6 col-md-6 col-sm-2 col-xs-12 control-label'}}) }}
                                <div class="col-lg-6 col-md-6 col-sm-10 col-xs-12">
                                    {{ form_widget(form.lastname,{attr:{class:'form-control no-radius input-md text-uppercase limited ngmodel','data-limit':20,'ng-model':'lastname'}}) }}
                                    {{ form_errors(form.lastname) }}
                                </div>
                            </div>
                        </div>



                        <div class="form-group {% if form_invalid(form.subject) %}error-input{% endif %}">
                            <div class="form_std_row row">
                                {{ form_label(form.subject,null,{label_attr:{class:'col-lg-6 col-md-6 col-sm-2 col-xs-12 control-label'}}) }}
                                <div class="col-lg-6 col-md-6 col-sm-10 col-xs-12">
                                    {{ form_widget(form.subject,{attr:{class:'form-control no-radius input-md'}}) }}
                                    {{ form_errors(form.subject) }}
                                </div>
                            </div>
                        </div>



                    </fieldset>
                </div>
                <!-- /.col-lg-4 -->
                <div class="col-lg-6">
                    <fieldset class="form">
                        <div class="form-group {% if form_invalid(form.firstname) %}error-input{% endif %}">
                            <div class="form_std_row row">
                                {{ form_label(form.firstname,null,{label_attr:{class:'col-lg-6 col-md-6 col-sm-2 col-xs-12 control-label'}}) }}
                                <div class="col-lg-6 col-md-6 col-sm-10 col-xs-12">
                                    {{ form_widget(form.firstname,{attr:{class:'form-control no-radius input-md text-uppercase limited ngmodel','data-limit':30,'ng-model':'firstname'}}) }}
                                    {{ form_errors(form.firstname) }}
                                </div>
                            </div>
                        </div>

                        <div class="form-group {% if form_invalid(form.email) %}error-input{% endif %}">
                            <div class="form_std_row row">
                                {{ form_label(form.email,null,{label_attr:{class:'col-lg-6 col-md-6 col-sm-2 col-xs-12 control-label'}}) }}
                                <div class="col-lg-6 col-md-6 col-sm-10 col-xs-12">
                                    {{ form_widget(form.email,{attr:{class:'form-control no-radius input-md'}}) }}
                                    {{ form_errors(form.email) }}
                                </div>
                            </div>
                        </div>


                    </fieldset>
                </div>


                <div class="clearfix"></div>



                <div class="col-lg-12">
                    <fieldset class="form">
                        <div class="form-group {% if form_invalid(form.message) %}error-input{% endif %}">
                            <div class="form_std_row row">
                                {{ form_label(form.message,null,{label_attr:{class:'col-lg-12 col-md-12 col-sm-2 col-xs-12 control-label'}}) }}
                                <div class="col-lg-12 col-md-12 col-sm-10 col-xs-12">
                                    {{ form_widget(form.message,{attr:{class:'form-control no-radius input-md text-uppercase limited ngmodel','data-limit':30,'ng-model':'firstname'}}) }}
                                    {{ form_errors(form.message) }}
                                </div>
                            </div>
                        </div>

                    </fieldset>
                </div>

                <div class="control-group pull-right">
                    <p class="f11 block">
                        Tous les champs mentionnés avec une étoile (*) sont obligatoires
                    </p>
                </div>
            </div>


            <div class="row">
                <div class="col-md-12 row-btn-prev-next">

                    <div class="clearfix"></div>
                    <div class="control-group pull-right">
                        <div class="controls">
                            {{ form_widget(form.save,{attr:{class:'btn btn-main-action device-btn t-s'}}) }}
                        </div>
                    </div>
                </div>
            </div>

            {{ form_rest(form) }}

        </form>
    </div>



{% endblock %}
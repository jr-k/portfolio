{% extends 'JrkPortfolioBackBundle:Layout:layout.html.twig' %}


{% block container %}
    {{ parent() }}

    <div id="content" class="banner-std-wrap no-bg testmbti mb30 mt80">
        <div class="container">

            {% set title = 'Nouveau' %}
            {% if not new %}
                {% set title = entity.name %}
            {% endif %}

            {% include '::breadcrumb.html.twig' with {items: [
            {label: 'Dashboard', link: path('jrk_portfolio_back_homepage'), icon:'icon-home'},
            {label: 'Tous les paramètres', link: path(route_list)},
            {label: title, link: path(route_edit,{id:entity.id})}
            ]}%}

            <div class="wrap_panel panel-default">
                <div class="wrap_heading actif">
                    <h3>
                        {{ title }}
                    </h3>
                </div>
                <div class="mt20 panel-collapse collapse in">
                    <div class="wrap_body">
                        <div class="form-horizontal clearfix p10">
                            <form method="POST" {{ form_enctype(form) }}>

                                <div class="form_std_row row">
                                    {######################
                                    #   LEFT
                                    #######################}
                                    <div class="col-md-6">
                                        <fieldset>

                                            <div class="form-group {% if form_invalid(form.vartype) %}error-input{% endif %}">
                                                <div class="form_std_row row">
                                                    {{ form_label(form.vartype,null,{'label_attr':{class:'col-lg-6 col-md-6 col-sm-3 col-xs-12 control-label'}}) }}
                                                    <div class="col-lg-6 col-md-6 col-sm-10 col-xs-12">
                                                        {{ form_widget(form.vartype,{attr:{class:'customselect form-control no-radius'}}) }}
                                                        {{ form_errors(form.vartype) }}
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="form-group {% if form_invalid(form.name) %}error-input{% endif %}">
                                                <div class="form_std_row row">
                                                    {{ form_label(form.name,null,{'label_attr':{class:'col-lg-6 col-md-6 col-sm-3 col-xs-12 control-label'}}) }}
                                                    <div class="col-lg-6 col-md-6 col-sm-9 col-xs-12">
                                                        {{ form_widget(form.name,{attr:{class:'form-control no-radius input-md'}}) }}
                                                        {{ form_errors(form.name) }}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group {% if form_invalid(form.description) %}error-input{% endif %}">
                                                <div class="form_std_row row">
                                                    {{ form_label(form.description,null,{'label_attr':{class:'col-lg-6 col-md-6 col-sm-3 col-xs-12 control-label'}}) }}
                                                    <div class="col-lg-6 col-md-6 col-sm-9 col-xs-12">
                                                        {{ form_widget(form.description,{attr:{class:'form-control no-radius input-md'}}) }}
                                                        {{ form_errors(form.description) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </fieldset>
                                    </div>

                                    {######################
                                    #   RIGHT
                                    #######################}
                                    <div class="col-md-6">
                                        <fieldset>

                                            <div class="form-group {% if form_invalid(form.visible) %}error-input{% endif %}">
                                                <div class="form_std_row row">
                                                    {{ form_label(form.visible,null,{'label_attr':{class:'col-lg-6 col-md-6 col-sm-3 col-xs-12 control-label'}}) }}
                                                    <div class="col-lg-6 col-md-6 col-sm-10 col-xs-12">
                                                        {{ form_widget(form.visible,{attr:{class:'customselect form-control no-radius'}}) }}
                                                        {{ form_errors(form.visible) }}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group {% if form_invalid(form.hastitle) %}error-input{% endif %}">
                                                <div class="form_std_row row">
                                                    {{ form_label(form.hastitle,null,{'label_attr':{class:'col-lg-6 col-md-6 col-sm-3 col-xs-12 control-label'}}) }}
                                                    <div class="col-lg-6 col-md-6 col-sm-10 col-xs-12">
                                                        {{ form_widget(form.hastitle,{attr:{class:'customselect form-control no-radius'}}) }}
                                                        {{ form_errors(form.hastitle) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </fieldset>
                                    </div>
                                </div>


                               {######################
                               #   FULL
                               #######################}
                                <div class="form_std_row row">
                                    <div class="col-md-12">
                                        <fieldset>
                                            <div class="form-group {% if form_invalid(form.help) %}error-input{% endif %}">
                                                <div class="form_std_row row">
                                                    {{ form_label(form.help,null,{'label_attr':{class:'col-lg-12 col-md-6 col-sm-3 col-xs-12 control-label'}}) }}
                                                    <div class="col-lg-12 col-md-6 col-sm-9 col-xs-12 mt10">
                                                        {{ form_widget(form.help,{attr:{class:'form-control no-radius input-md'}}) }}
                                                        {{ form_errors(form.help) }}
                                                    </div>
                                                </div>
                                            </div>

                                        </fieldset>
                                    </div>
                                </div>


                                {######################
                                #   ACTIONS
                                #######################}
                                <div class="clearfix"></div>


                                <div class="form_std_row row">
                                    <div class="col-md-7 row-btn-prev-next mt10 pb15">
                                        <div class="control-group pull-left fnsm">
                                            <div class="controls">
                                                {{ form_widget(form.save,{attr:{class:'btn champsuivant device-btn'}}) }}
                                                {{ form_widget(form.save_and_add,{attr:{class:'btn champsuivant device-btn'}}) }}
                                                {{ form_widget(form.save_and_edit,{attr:{class:'btn champsuivant device-btn'}}) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-5 row-btn-prev-next mt10 pb15">
                                        <div class="control-group pull-right fnsm">
                                            <div class="controls">
                                                {{ form_widget(form.save_and_stay,{attr:{class:'btn btn-aqua champsuivant device-btn'}}) }}
                                                <a class="btn btn-red champsuivant device-btn" href="{{ path(route_list) }}">Retour à la liste</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {{ form_rest(form) }}
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}